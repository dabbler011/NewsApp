<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:paddingStart="12dp"
        android:paddingTop="26dp"
        android:paddingEnd="12dp"
        android:paddingBottom="26dp">

    <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:text="Title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/tv_news_image"
            app:layout_constraintTop_toTopOf="@id/tv_news_image"
            tools:text="Sample"
            android:layout_marginStart="20dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
            android:id="@+id/tv_news_image"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:contentDescription="Sample image"
            android:src="#ddd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteY="26dp"
            tools:layout_editor_absoluteX="12dp"/>

    <TextView
            android:id="@+id/tv_news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source"
            android:textColor="#6d6d6d"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_news_title"
            app:layout_constraintTop_toBottomOf="@id/tv_news_title"
            tools:text="Sample Source"
            tools:layout_editor_absoluteY="53dp"
            tools:layout_editor_absoluteX="102dp"/>

</android.support.constraint.ConstraintLayout>